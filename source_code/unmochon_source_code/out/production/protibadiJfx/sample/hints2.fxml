<Pane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.HintsController2">
   <children>
       <VBox prefHeight="600" prefWidth="600">
          <children>
              <TextArea fx:id="text" maxWidth="600" minWidth="600" prefHeight="150" maxHeight="250"  prefWidth="600"  />
              <ImageView fx:id="imagew" fitHeight="400" fitWidth="600">
        </ImageView>
              <HBox alignment="CENTER" maxWidth="600" minWidth="600" prefHeight="100" prefWidth="600">
                 <children>
                    <Button onAction="#previousAction" fx:id="previous" layoutX="120.0" prefHeight="40" prefWidth="100" text="Previous">
                     <HBox.margin>
                        <Insets left="80.0" right="40.0" />
                     </HBox.margin>
                    </Button>
                    <Button onAction="#nextAction" fx:id="next" layoutX="330" prefHeight="50" prefWidth="90" text="Next">
                     <HBox.margin>
                        <Insets left="40.0" right="40.0" />
                     </HBox.margin>
                    </Button>
                    <Button onAction="#closeAction" style="{-fx-background-color:#221212;-fx-background-radius: 5,5,5,5;}" fx:id="close" layoutX="470" prefHeight="40" prefWidth="90" text="Close">
                     <HBox.margin>
                        <Insets left="40.0" right="70.0" />
                     </HBox.margin>
                    </Button>
                 </children>
              </HBox>
          </children>
       </VBox>
   </children>
</Pane>
